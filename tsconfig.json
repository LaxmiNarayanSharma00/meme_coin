{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",               // <--- This is strict
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"                        // <--- Only compile files inside src
  ],
  "exclude": [
    "node_modules",
    "tests",                          // <--- Explicitly ignore the tests folder
    "**/*.test.ts"
  ]
}